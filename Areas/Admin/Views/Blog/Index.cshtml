@model List<Blog>

<div class="container">
	<div class="row">

		<div class="row">
			<a class="btn btn-success" asp-action="Create" asp-controller="Product">Create</a>
		</div>
	</div>
	<table class="table table-hover table-dark">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Title</th>
				<th scope="col">Text</th>
				<th scope="col">Employee</th>
				<th scope="col">PostedDate</th>
				<th scope="col">Image</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>


			@foreach (var item in Model)
			{
				<tr>
					<th scope="row">@item.Id</th>
					<td>@item.Title</td>
					<td>@item.Text</td>
					<td>@item.Employee.FirstName @item.Employee.LastName</td>
					<td>@item.PostedDate</td>

					<td>
						<img src="~/assets/images/@item.ImageName" alt="@item.Title" width="40" />
					</td>



					<td style="display:flex" class="gap-1">
						<a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
						<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>


					</td>



				</tr>
			}

		</tbody>


	</table>

</div>
